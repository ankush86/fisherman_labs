<h1>Monsters</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Power</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= link_to monster.name, monster_path(monster) %></td>
        <td><%= monster.power %></td>
        <td><%= monster.mtype %></td>
        <td>
          <%= link_to 'Edit', edit_monster_path(monster), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', monster_path(monster), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_monster_path, :class => 'btn btn-primary' %>